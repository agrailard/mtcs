
{{#power-calendar
  locale="fr"
  selected=selected
  center=center
  onSelect=(action (mut selected) value="moment")
  onCenterChange=(action (mut center) value="date") as |calendar|}}
  <div class="row">
	  <div class="col-lg-3">
		  {{calendar.nav}}
		  {{calendar.days}}
	  </div>
	  <div class="col-lg-9">
		<h2 class="text-center">{{moment-format selected 'dddd D MMMM'}}</h2>
	  </div>
  </div>
{{/power-calendar}}